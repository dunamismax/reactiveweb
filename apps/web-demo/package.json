{
  "name": "@reactiveweb/web-demo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.13.1"
  },
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "test": "vitest run",
    "test:visual": "playwright test --config=playwright.config.ts",
    "test:visual:ci": "playwright test --config=playwright.config.ts --project=chromium",
    "test:visual:debug": "playwright test --config=playwright.config.ts --project=chromium --headed",
    "test:visual:update": "playwright test --config=playwright.config.ts --project=chromium --update-snapshots",
    "test:visual:install": "playwright install chromium"
  },
  "dependencies": {
    "@auth/core": "^0.41.0",
    "@react-router/node": "7.12.0",
    "@react-router/serve": "7.12.0",
    "@reactiveweb/config": "workspace:*",
    "@reactiveweb/db": "workspace:*",
    "@reactiveweb/ui": "workspace:*",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.5",
    "isbot": "^5.1.31",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "7.12.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@react-router/dev": "7.12.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}

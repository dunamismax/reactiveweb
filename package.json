{
  "name": "reactiveweb",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "packageManager": "bun@1.3.9",
  "engines": {
    "node": ">=24.13.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/cli.ts dev web-demo'",
    "dev:template": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/cli.ts dev web-template'",
    "dev:app": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/cli.ts dev'",
    "db:migrate": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/db-migrate.ts'",
    "demo:seed": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/web-demo-seed.ts'",
    "demo:bootstrap": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/web-demo-bootstrap.ts'",
    "build": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/cli.ts build all'",
    "typecheck": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/cli.ts typecheck all'",
    "lint": "biome check .",
    "format": "biome check --write .",
    "apps:list": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/cli.ts list'",
    "test:web-demo": "${SHELL:-/bin/zsh} -lic 'bun run ./scripts/cli.ts test web-demo'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2"
  }
}

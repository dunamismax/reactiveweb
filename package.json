{
  "name": "reactiveweb",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "packageManager": "bun@1.3.9",
  "engines": {
    "node": ">=24.13.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/cli.ts dev web-demo",
    "dev:template": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/cli.ts dev web-template",
    "dev:app": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/cli.ts dev",
    "db:migrate": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/db-migrate.ts",
    "demo:seed": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/web-demo-seed.ts",
    "demo:bootstrap": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/web-demo-bootstrap.ts",
    "build": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/cli.ts build all",
    "typecheck": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/cli.ts typecheck all",
    "lint": "biome check .",
    "format": "biome check --write .",
    "apps:list": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/cli.ts list",
    "test:web-demo": "${BUN_BIN:-$HOME/.bun/bin/bun} run ./scripts/cli.ts test web-demo"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2"
  }
}
